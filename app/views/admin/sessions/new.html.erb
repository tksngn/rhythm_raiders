
    <header style="height: 120px; background: url(<%= image_path 'rhythm_raiders_logo2.jpg' %>) no-repeat right; background-size: 500px 120px;">
      <div class="container">
        <h1 class="display-4" style="color: red; -webkit-text-stroke: 1px grey;">管理者TOP</h1>
      </div>
    </header>
    <div class="mt-4 text-center">
      <%= image_tag "cai-fang-WoG139ylZJs-unsplash.jpg", alt: "Background Image", style: "width:100%; height: 350px;" %>
    </div>
     <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="card">
              <div style="display: flex; justify-content: center; align-items: center; height: 10vh;">
              <h2 style="color: red; -webkit-text-stroke: 1px grey;">管理者LOG IN</div>
                <div class="card-body">
                  <%= form_for(resource, as: resource_name, url: admin_session_path) do |form| %>
                  <div class="form-group row">
                      <%= form.label :email, class: "col-md-4 col-form-label text-md-right" %>
                    <div class="col-md-6">
                      <%= form.email_field :email, id: "email", class: "form-control", required: true, autofocus: true %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= form.label :password, class: "col-md-4 col-form-label text-md-right" %>
                      <div class="col-md-6">
                        <%= form.password_field :password, id: "password", class: "form-control", required: true %>
                      </div>
                  </div>
                  <div class="d-flex justify-content-center align-items-center" style="height: 20vh;">
                    <div style="border: 1px solid white; padding: 11px;">
                      <h1 class="text-center">Hello, world of Music!</h1>
                    </div>
                    <div class="d-flex justify-content-center">
                      <%= form.submit "LOG IN", class: "btn btn-primary", style: "width: 225px; height: 80px;" %>
                    </div>
                  </div>
                  <% end %>
                </div>
            </div>
          </div>
        </div>
      </div>
    <footer class="text-center">
      <div class="container">
        <p>©20231225 Rhythm RAIDERS</p>
      </div>
    </footer>
