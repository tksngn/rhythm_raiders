<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center">
        <div class="mt-5">
          <h1 class="m-1">
            <strong style="color: #f23f23;">フォロワー一覧</strong>
          </h1>
        </div>
      </div>
      <div class="mb-1">
        <div class="text-center">
          <% @members.each do |member| %>
            <%= link_to member_customer_path(member) do %>
              <p class="caption h4"><%= member.creater_name %></p>
              <p class="m-1">
                <%= image_tag member.get_profile_image(100, 100)%>
                <h4 class="ml-5"><%= member.profile %></h4>
              </p>
              <div class="m-1">
                <p class="caption"><%= "#{member.created_tracks.count} 投稿" %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>