<div class="member_login">
  <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <%= image_tag("rhythm_raiders_logo2.jpg", alt: "Rhythm Raiders Logo") %>
    <% if flash[:notice] %>
      <div class="alert alert-success" style="margin-top: 10px;">
        <%= flash[:notice] %>
        <% flash.discard(:notice) %>
      </div>
    <% end %>
  </div>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card-body">
          <div style="display: flex; justify-content: center; align-items: center; height: 10vh;">
          <h2 style="color: red; -webkit-text-stroke: 1px grey;">Memnber LOG IN</div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: new_member_session_path) do |form| %>
                <div class="form-group row">
                  <%= form.label :email, class: "col-md-4 col-form-label text-md-right" %>
                  <div class="col-md-4">
                    <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= form.label :password, class: "col-md-4 col-form-label text-md-right" %>
                  <div class="col-md-4">
                    <%= form.password_field :password, class: "form-control", required: true %>
                  </div>
                </div>
                <div class="d-flex justify-content-center align-items-center" style="height: 20vh;">
                  <div style="border: 1px solid white; padding: 11px;">
                    <h1 class="text-center">Hello, world of Music!</h1>
                  </div>
                  <div class="d-flex justify-content-center">
                    <%= form.submit "LOG IN", class: "btn btn-primary", style: "width: 225px; height: 80px;" %>
                  </div>
                </div>
              <% end %>
            <p>Now,let's go on a Musical Adventure!</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


