<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center">
        <div class="card mb-3">
          <div class="card-body">
            <h3 class="mt-5"><strong style="color: #f23f23">ー通知ー</strong></h3>
            <% if @notifications.present? %>
              <%= link_to "全削除",notification_path(@notifications), method: :delete, class:"btn btn-light" %>
              <% @notifications.each do |notification| %>
                  <%= render "#{notification.subject.class.name.downcase}", notification: notification %>
              <% end %>
            <% else %>
              通知はありません
            <% end %>
          </div>
        </div>
      </div>
      <div class="mt-5">
        <div class="text-center">
          <%= link_to 'Back to Mypage', mypage_member_customers_path, method: :get, class: "button" %>
        </div>
      </div>
    </div>
  </div>
</div>