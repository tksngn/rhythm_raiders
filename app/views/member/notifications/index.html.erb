<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-3">
        <div class="card-body">
          <h4 class="text-center">通知</h4>
          <% if @notifications.present? %>
            <%= link_to "全削除",notifications_path(@notifications), method: :delete, class:"btn btn-light" %>
            <% @notifications.each do |notification| %>
                <%= render "#{notification.subject_type.downcase}", notification: notification %>
            <% end %>
          <% else %>
            通知はありません
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>